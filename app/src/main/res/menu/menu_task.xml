<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ranch.android.plm.TaskActivity">

    <item
        android:id="@+id/reportProgressTask"
        android:icon="@drawable/ic_trending_up_white_24dp"
        android:onClick="reportProgressTaskClickHandler"
        android:orderInCategory="100"
        android:title="@string/label_enter_progress"
        app:showAsAction="always"/>
    <item
        android:id="@+id/saveTask"
        android:icon="@drawable/ic_done_white_18dp"
        android:onClick="taskSaveClickHandler"
        android:orderInCategory="200"
        android:title="@string/label_save"
        app:showAsAction="always" />

    <item
        android:id="@+id/deleteTask"
        android:onClick="deleteTaskClickHandler"
        android:orderInCategory="300"
        android:title="@string/label_delete"
        app:showAsAction="never" />

</menu>