<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_task"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginTop="6dp"
    card_view:cardBackgroundColor="@android:color/holo_blue_dark"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    android:padding="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp" >


        <TextView
            android:id="@+id/txtTaskListTitle"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/assignment_txt_marginLeft"
            android:text="Assignment 01"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView.PopupMenu" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTaskListProgress"
                android:layout_width="@dimen/prog_layout_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/assignment_txt_marginLeft"
                android:text="Progress  100%"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/prog_txt_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTaskListCompleted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Completed"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/deadline_txt_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>